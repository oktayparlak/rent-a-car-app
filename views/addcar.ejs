    <div class="container mt-5">
        <div class="row">
          <div class="col-md-6 offset-md-3">
            <h1 class="text-center mb-5">Araba Ekle</h1>
            <form>
                <div class="form-group">
                    <label for="car-brand">Araba Markası</label>
                    <input type="text" class="form-control" id="car-brand" placeholder="Araba markası girin">
                </div>
                <div class="form-group">
                    <label for="car-model">Araba Modeli</label>
                    <input type="text" class="form-control" id="car-model" placeholder="Araba modeli girin">
                </div>
                <div class="form-group">
                    <label for="car_mileage">Araba KM'si</label>
                    <input type="number" class="form-control" id="car_mileage" placeholder="Araba km'si girin">
                </div>
                <div class="form-group">
                    <label for="car_transmission">Vites Tipi</label>
                    <select class="form-control">
                        <option>Manuel</option>
                        <option>Otomatik</option>
                      </select>
                </div>
                <div class="form-group">
                    <label for="car_seats">Koltuk Sayısı</label>
                    <select class="form-control">
                        <option>2</option>
                        <option>3</option>
                        <option>4</option>
                        <option>5</option>
                        <option>6</option>
                        <option>7</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="car_fuel">Yakıt Tipi</label>
                    <select class="form-control">
                        <option>Benzin</option>
                        <option>Dizel</option>
                        <option>LPG</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="car_price_a_day">Günlük Ücret</label>
                    <input type="text" class="form-control" id="car_price_a_day" placeholder="Günlük ücreti girin girin">
                </div>
                

                  <div class="form-group">
                    <label for="file">Araba Resmi ekle</label>
                    <input type="file" class="form-control-file" id="file">
                  </div>
                  <button type="submit" class="btn btn-primary btn-block">Arabayı Ekle</button>
            </form>
            <br><br>

          </div>
        </div>
      </div>

